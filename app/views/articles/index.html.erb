<br />
<table border="1" class="table is-fullwidth table is-bordered table is-striped">
  <th>Name</th>
  <th>Email Address</th>
  <th>Action 1</th>
  <th>Action 2</th>
  <th>Action 3</th>

  <% @articles.each do |article| %>
  <tr>
    <td><%= article.name %></td>
    <td><%= article.email %></td>
    <td><%= link_to 'Show', article_path(article[:id]) %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>

    <td>
      <%= link_to 'destroy', article_path(article), method: :delete, data:
      {confirm: "Are you Sure"} %>
    </td>
  </tr>
  <% end %>
</table>
<br />

&nbsp;<%= link_to 'New Entry',new_article_path, class: "button is-black" %>
